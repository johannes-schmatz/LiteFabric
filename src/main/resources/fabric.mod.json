{
  "schemaVersion": 1,
  "id": "litefabric",
  "version": "${version}",
  "name": "LiteFabric",
  "description": "Launch LiteLoader mods with Fabric",
  "authors": [
    "skyrising"
  ],
  "contact": {
    "homepage": "https://skyrising.xyz",
    "sources": "https://github.com/skyrising/LiteFabric",
    "issues": "https://github.com/skyrising/LiteFabric/issues"
  },
  "license": "MIT",
  "icon": "assets/litefabric/icon.png",
  "environment": "client",
  "entrypoints": {
    "preLaunch": [
      "de.skyrising.litefabric.impl.PreLaunch"
    ],
    "modmenu": [
      "de.skyrising.litefabric.impl.util.ModMenuCompat"
    ]
  },
  "mixins": [
    "litefabric.mixins.json"
  ],
  "depends": {
    "minecraft": "1.12.2"
  },
  "custom": {
    "modmenu": {
      "badges": ["library"]
    }
  }
}
